<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        tools:context=".MainActivity"> <!--Scroll view-->


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Profile Header-->
                <TextView
                    android:id="@+id/profileHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/ProfileHeader"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold" />


                <!--Edit Button-->
                <ImageButton
                    android:id="@+id/editBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:src="@drawable/ic_baseline_edit_24"
                    tools:ignore="SpeakableTextPresentCheck" />

                <!--User Profile Picture-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/UserPicture"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_below="@+id/profileHeader"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="250dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="250dp">

                        <ImageView
                            android:id="@id/UserPicture"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>



                <!--Name Header -->
                <TextView
                    android:id="@+id/UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserPicture"
                    android:layout_marginTop="30dp"
                    android:text="Name: "
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <!--Name-->
                <TextView
                    android:id="@+id/nameProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailHeader"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <!--Email Header -->
                <TextView
                    android:id="@+id/emailHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserName"
                    android:layout_marginTop="40dp"
                    android:text="@string/EmailHeader"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <!--Email  -->
                <TextView
                    android:id="@+id/emailProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserName"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:textSize="25dp"
                    android:textStyle="bold" />






                <!--Log Out Button-->
                <Button
                    android:id="@+id/logOutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailProfile"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_google_logo"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="sign out" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>