<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        tools:context=".MainActivity"> <!--Scroll view-->


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Profile Header-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ProfileHeader"
                    android:layout_alignParentTop="true"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/profileHeader"/>



                <!--Edit Button-->
                <ImageButton
                    android:id="@+id/editBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:src="@drawable/ic_baseline_edit_24"/>

                <!--User Profile Picture-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/UserPicture"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="40dp"
                    app:cardCornerRadius="250dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/profileHeader">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="250dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@id/UserPicture"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"/>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <!--User Name-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/UserName"
                    android:layout_below="@+id/UserPicture"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <!--Email Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailHeader"
                    android:layout_below="@+id/UserName"
                    android:layout_marginTop="40dp"
                    android:text="@string/EmailHeader"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />

                <!--Email  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailProfile"
                    android:layout_below="@+id/UserName"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />

                <!--Phone Number Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phHeader"
                    android:layout_below="@+id/emailHeader"
                    android:layout_marginTop="30dp"
                    android:text="@string/PhoneHeader"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />

                <!--PhoneNumber  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phProfile"
                    android:layout_below="@+id/emailHeader"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />

                <!--Date of Birth Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dobHeader"
                    android:layout_below="@+id/phHeader"
                    android:layout_marginTop="30dp"
                    android:text="@string/BirthdateHeader"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />

                <!--Date of Birth-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dobProfile"
                    android:layout_below="@+id/phHeader"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />

                <!--Horizontal line-->
                <View
                    android:id="@+id/divider1"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/dobProfile"/>

                <!--LoG Out Button-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider1"
                    android:textColor="@color/black"
                    android:text="@string/logoutbtn"
                    android:id="@+id/logOutBtn"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:padding="15dp"
                    android:background="@android:color/transparent"
                    />

                <!--Horizontal line-->
                <View
                    android:id="@+id/divider2"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_below="@+id/logOutBtn"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>