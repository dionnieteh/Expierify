<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".NotificationPage">

    <!--Back Button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="SpeakableTextPresentCheck"
        android:background="@android:color/transparent"
        android:id="@+id/backBtn"
        android:layout_marginTop="5dp"
        />

    <!--Header-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:id="@+id/header"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

    <!--Name Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationDesc"
        android:layout_below="@+id/header"
        android:layout_marginTop="25dp"
        android:text="Customize reminders of your food expiry"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusHeader"
        android:layout_below="@+id/notificationDesc">

        <RadioGroup
            android:id="@+id/notificationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/onNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get reminders"/>

            <RadioButton
                android:id="@+id/offNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do not notify me" />

        </RadioGroup>
    </LinearLayout>



        <!--DaysHeader -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daysHeader"
            android:layout_below="@+id/statusHeader"
            android:layout_marginTop="20dp"
            android:text="Reminders from how many days before expiry: "
            android:textSize="18sp"
            android:textColor="@color/black"
        />


        <!--days-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/days"
            android:layout_below="@+id/daysHeader"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:hint="Enter number of days "
            android:inputType="number"
            />

        <!--DaysHeader -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notificationTime"
            android:layout_below="@+id/days"
            android:layout_marginTop="25dp"
            android:text="Reminder Time: "
            android:textSize="18sp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/notificationTime"
            android:gravity="center"
            android:layout_centerHorizontal="true">


           <TimePicker
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:timePickerMode="spinner"
               android:calendarViewShown="false"
               android:layout_gravity="center"
               android:id="@+id/timePicker"
               />

        </LinearLayout>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:text="Save"
        android:padding="10dp"


        />



</RelativeLayout>